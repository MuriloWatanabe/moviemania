<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MovieMania - Início</title>
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/reviews.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
  <header>
    <%- include("header") %>
  </header>
  <div class="content">
    <h1>Bem vindo ao Moviemania!</h1>

    <h2 id="subh2">Novidades no MovieMania</h2>
    <div class="movie-grid" id="novidades">
      <% if (newMovies && newMovies.length > 0) { %>
        <% newMovies.forEach(movie => { %>
          <a href="/filme/<%= movie.id_filme %>" class="movie-card">
            <img src="/img/posters/<%= movie.id_filme %>.jpg" alt="<%= movie.titulo %>">
            <h3><%= movie.titulo %></h3>
          </a>
        <% }); %>
      <% } else { %>
        <p class="no-content-message">Nenhum filme novo disponível no momento.</p>
      <% } %>
    </div>

    <h2 id="subh2">Populares no MovieMania</h2>
    <div class="movie-grid" id="populares">
      <% if (popularMovies && popularMovies.length > 0) { %>
        <% popularMovies.forEach(movie => { %>
          <a href="/filme/<%= movie.id_filme %>" class="movie-card">
            <img src="/img/posters/<%= movie.id_filme %>.jpg" alt="<%= movie.titulo %>">
            <h3><%= movie.titulo %></h3>
          </a>
        <% }); %>
      <% } else { %>
        <p class="no-content-message">Nenhum filme popular disponível no momento.</p>
      <% } %>
    </div>

    <section class="reviews-section">
      <h2>Reviews Populares da Semana</h2>
      <div class="review-grid">
        <% if (homeReviews && homeReviews.length > 0) { %>
          <% homeReviews.forEach(review => { %>
            <div class="review-card">
              <a href="/filme/<%= review.movieId %>">
                <img src="/img/posters/<%= review.movieId %>.jpg" alt="<%= review.movieTitle %>">
              </a>
              <div class="review-content">
                <div class="review-header">
                  <img src="/img/default-avatar.png" alt="User Avatar" class="user-avatar">
                  <span class="username">User<%= review.userId %></span>
                </div>
                <div class="review-details">
                  <h3><a href="/filme/<%= review.movieId %>"><%= review.movieTitle %></a> <span class="movie-year"><%= review.movieYear %></span></h3>
                  <div class="review-stats">
                    <span><i class="fas fa-star icon"></i> <%= review.rating %></span>
                    <span><i class="fas fa-comment-alt icon"></i></span>
                  </div>
                </div>
                <p class="review-text">
                  <%= review.text %>
                </p>
                <div class="review-footer">
                  <i class="fas fa-heart heart-icon"></i> Curte o Comentário <span><%= review.likes %> Curtidas</span>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="no-content-message">Nenhuma review popular para exibir no momento.</p>
        <% } %>
      </div>
    </section>

  </div>

  <%- include("footer") %>
</body>
</html>